{
  "build": {
    "beforeDevCommand": "pnpm vite:dev",
    "beforeBuildCommand": "pnpm vite:build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Armoe Minecraft Launcher",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "os": {
        "all": true
      },
      "http": {
        "all": true,
        "scope": [
          "https://api.armoe.cn/amcl/*",
          "https://api.github.com/repo/armoe-project/*"
        ]
      },
      "path": {
        "all": true
      },
      "fs": {
        "scope": [
          "$RESOURCE/AMCL",
          "$RESOURCE/AMCL/**",
          "$RESOURCE/.minecraft",
          "$RESOURCE/.minecraft/**",
          "$APPDATA/.minecraft",
          "$APPDATA/.minecraft/**"
        ],
        "all": true
      },
      "window": {
        "close": true,
        "minimize": true,
        "setDecorations": true,
        "startDragging": true
      },
      "protocol": {
        "asset": true,
        "assetScope": [
          "$RESOURCE/AMCL/background/*"
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "Utility",
      "copyright": "Â©2003 ZhenXin",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "cn.armoe.amcl",
      "longDescription": "Armoe Cross-platform Minecraft Launcher By: ZhenXin",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "Armoe Minecraft Launcher",
      "targets": [
        "app",
        "deb",
        "dmg"
      ],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "language": [
            "en-US",
            "zh-CN"
          ]
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "title": "Armoe Minecraft Launcher",
        "width": 854,
        "height": 480,
        "visible": false,
        "center": true,
        "resizable": false,
        "titleBarStyle": "Overlay"
      }
    ]
  }
}